<div class="container-fluid w-50 mx-auto">
  <form method="POST" action="/accounts/{{record._id}}?_method=PUT">
    <div class="mt-3 row">
      <label for="name" class="col-sm-2 col-form-label">名稱</label>
      <div class="col-sm-10">
        <input type="text" name="name" class="form-control" id="name" required=true placeholder="名稱"
          value="{{record.name}}">
      </div>
    </div>

    <div class="mt-3 row">
      <label for="date" class="col-sm-2 col-form-label">date</label>
      <div class="col-sm-10">
        <input type="date" name="date" class="form-control" id="date" required=true placeholder="date"
          value={{record.date}}>
      </div>
    </div>

    <div class="mt-3 row">
      <label for="title" class="col-sm-2 col-form-label">類別</label>
      <div class="col-sm-10">
        <select name="title" class="form-select category" id="title" required=true>
          <option value="家居物業" {{{isMatched "家居物業" record.categoryID.title}}}>家居物業</option>
          <option value="交通出行" {{{isMatched "交通出行" record.categoryID.title}}}>交通出行</option>
          <option value="休閒娛樂" {{{isMatched "休閒娛樂" record.categoryID.title}}}>休閒娛樂</option>
          <option value="餐飲食品" {{{isMatched "餐飲食品" record.categoryID.title}}}>餐飲食品</option>
          <option value="其他" {{{isMatched "其他" record.categoryID.title}}}>其他</option>
        </select>
      </div>
    </div>

    <div class="mt-3 row">
      <label for="amount" class="col-sm-2 col-form-label">金額</label>
      <div class="col-sm-10">
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input type="number" class="form-control" id="amount" name="amount" placeholder="請輸入金額" required=true
            value="{{record.amount}}">
        </div>
      </div>
    </div>
    <div class="d-flex mx-auto justify-content-end mt-3">
      <button type="submit" class="btn btn-primary me-3">修改</button>
      <a href="/" class="btn btn-primary">返回</a>
    </div>
  </form>
</div>