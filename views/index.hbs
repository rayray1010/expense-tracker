<div class="container">
  <div class="mx-auto row mt-3" style="width: 400px; height: 50px">
    <form action="/" method="GET" id="sortOption">
      <select name="sort" id="sort" onchange="sortOption.submit()">
        <option value=".">類別</option>
        <option value="家居物業" {{{isMatched sort "家居物業" }}}>家居物業</option>
        <option value="交通出行" {{{isMatched sort "交通出行" }}}>交通出行</option>
        <option value="休閒娛樂" {{{isMatched sort "休閒娛樂" }}}>休閒娛樂</option>
        <option value="餐飲食品" {{{isMatched sort "餐飲食品" }}}>餐飲食品</option>
        <option value="其他" {{{isMatched sort "其他" }}}>其他</option>
      </select>
    </form>
  </div>
  <div class="mx-auto mt-3 align-middle" style="width: 400px; height:100px;">
    <p class="fs-1 text-center">總支出：{{total}}</p>
  </div>
  <div class="card mt-5 mx-auto" style="max-width: 900px;">
    <div class="card-header">
      <div class="row">
        <p class="col-6">支出</p>
        <p class="col-4">金額</p>
        <p class="col-2"></p>
      </div>
    </div>
    <ul class="list-group list-group-flush">
      {{#if record}}
      {{#each record}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-6"><i class="{{this.icon}}"><span class="ms-1">{{this.name}}</span></i></div>
          <div class="col-4">{{this.amount}}</div>
          <div class="col-2">
            <a href="/accounts/{{this.id}}/edit">修改</a>
            <a href="">刪除</a>
          </div>
      </li>
      {{/each}}
      {{/if}}
    </ul>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <a href="/accounts/new" class="btn btn-lg btn-outline-primary btn-block">新增一筆</a>
  </div>



</div>